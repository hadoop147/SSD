<div class="paymentSuccess">
   <div class="w3-card-4">
      <div class="w3-container w3-yellow w3-text-black w3-center w3-wide">
        <h2>Success!! Payment created</h2>
      </div>
      
      <p id="notice"><%= notice %></p>
      
      <div class="w3-center w3-wide">
        
        <p>
          <strong>Pay method:</strong>
          <%= @payment.pay_method %>
        </p>
        
        <p>
          <strong>Card number:</strong>
          <%= @payment.card_number %>
        </p>
        
        <p>
          <strong>Expiration date:</strong>
          <%= @payment.expiration_date %>
        </p>
        
        <p>
          <strong>Card code:</strong>
          <%= @payment.card_code %>
        </p>
        
        <p>
          <strong>Customer:</strong>
          <%= @payment.customer %>
        </p>
        
        <p>
          <strong>Shipping:</strong>
          <%= @payment.shipping %>
        </p>
        
        <p>
          <strong>Order:</strong>
          <%= @payment.order %>
        </p>
        
        <div class="w3-panel w3-pale-green w3-padding-24">
          <%= link_to 'Edit', edit_payment_path(@payment), :class => "w3-button w3-orange w3-hover-green w3-round-large w3-margin-left", :role => "button" %> 
          <%= link_to 'Back', payments_path, :class => "w3-button w3-orange w3-hover-green w3-round-large w3-margin-left", :role => "button" %>
        </div>
      </div>
    </div>
</div>
