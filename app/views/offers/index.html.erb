<% provide(:title, "Offers") %>

<% #if admin_signed_in? %>
<%= link_to 'New Offers',  new_offer_path, :class => "w3-button w3-orange w3-hover-green w3-round-xxlarge w3-margin-left", :role => "button" %>
<% #end %>

<p id="notice"><%= notice %></p>

<!--<div class="offers">-->
<div class="w3-panel w3-card-4 w3-red w3-center w3-topbar w3-bottombar w3-border-black w3-animate-zoom">
    <div class="w3-jumbo">Special Offers</div>
</div>

<table>
  <thead>
    <tr>
      <th>Offertype</th>
      <th>Description</th>
      <th>Pricereduction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.offertype %></td>
        <td><%= offer.description %></td>
        <td><%= offer.pricereduction %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>





