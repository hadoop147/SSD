<div class="customerSuccess">
   <div class="w3-card-4">
      <div class="w3-container w3-purple w3-text-white w3-center w3-wide">
        <h2>Customer Details</h2>
      </div>
      
      <p id="notice"><%= notice %></p>
      
      <div class="w3-center w3-wide">
        <p>
          <strong>First:</strong>
          <%= @customer.fname %>
        </p>
        
        <p>
          <strong>Last:</strong>
          <%= @customer.lname %>
        </p>
        
        <p>
          <strong>Phone:</strong>
          <%= @customer.phonenumber %>
        </p>
        
        <p>
          <strong>Date of birth:</strong>
          <%= @customer.date_of_birth %>
        </p>
        
        <p>
          <strong>User:</strong>
          <%= @customer.user %>
        </p>
        
        <div class="w3-panel w3-pale-green w3-padding-24">
          <%= link_to 'Edit', edit_customer_path(@customer), :class => "w3-button w3-orange w3-hover-green w3-round-large w3-margin-left", :role => "button" %> 
          <%= link_to 'Back', customers_path, :class => "w3-button w3-orange w3-hover-green w3-round-large w3-margin-left", :role => "button" %>
        </div>
      </div>
    </div>
</div>
