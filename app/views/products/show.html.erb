<div class="offerSuccess">
   <div class="w3-card-4">
      <div class="w3-container w3-deep-orange w3-text-white w3-center w3-wide">
        <h2>Success!! Product created</h2>
      </div>
      
      <p id="notice"><%= notice %></p>
      
      <div class="w3-center w3-wide">
        <p>
          <strong>Prod name:</strong>
          <%= @product.prod_name %>
        </p>
        
        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>
        
        <p>
          <strong>Stock quantity:</strong>
          <%= @product.stock_quantity %>
        </p>
        
        <p>
          <strong>Prod gender:</strong>
          <%= @product.prod_gender %>
        </p>
        
        <p>
          <strong>Prod price:</strong>
          <%= @product.prod_price %>
        </p>
        
        <p>
          <strong>Prod size:</strong>
          <%= @product.prod_size %>
        </p>
        
        <p>
          <strong>Colours:</strong>
          <%= @product.colours %>
        </p>
        
        <p>
          <strong>Image url:</strong>
          <%= @product.image_url %>
        </p>
        
        <p>
          <strong>Offer:</strong>
          <%= @product.offer %>
        </p>
        
        <p>
          <strong>Category:</strong>
          <%= @product.category %>
        </p>
        
        <p>
          <strong>Brand:</strong>
          <%= @product.brand %>
        </p>
        
        <div class="w3-panel w3-pale-green w3-padding-24">
          <%= link_to 'Edit', edit_product_path(@product), :class => "w3-button w3-orange w3-hover-green w3-round-large w3-margin-left", :role => "button" %> 
          <%= link_to 'Back', products_path, :class => "w3-button w3-orange w3-hover-green w3-round-large w3-margin-left", :role => "button" %>
        </div>
      </div>
    </div>
</div>
