<% provide(:title, "Products") %>

<% #if admin_signed_in? %>
<%= link_to 'New Product',  new_product_path, :class => "w3-button w3-orange w3-hover-green w3-round-xxlarge w3-margin-left", :role => "button" %>
<% #end %>

<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Prod name</th>
      <th>Description</th>
      <th>Stock quantity</th>
      <th>Prod gender</th>
      <th>Prod price</th>
      <th>Prod size</th>
      <th>Colours</th>
      <th>Image url</th>
      <th>Offer</th>
      <th>Category</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.prod_name %></td>
        <td><%= product.description %></td>
        <td><%= product.stock_quantity %></td>
        <td><%= product.prod_gender %></td>
        <td><%= product.prod_price %></td>
        <td><%= product.prod_size %></td>
        <td><%= product.colours %></td>
        <td><%= product.image_url %></td>
        <td><%= product.offer %></td>
        <td><%= product.category %></td>
        <td><%= product.brand %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
