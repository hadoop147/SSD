<% provide(:title, "Products") %>

<% #if admin_signed_in? %>
<%= link_to 'New Product',  new_product_path, :class => "w3-button w3-orange w3-hover-green w3-round-xxlarge w3-margin-left", :role => "button" %>
<% #end %>

<p id="notice"><%= notice %></p>

<!--productss container-->
<!--<div id="productssContainer">-->
<div class="w3-container">
  <div class="w3-panel w3-blue w3-jumbo w3-center w3-topbar w3-bottombar w3-border-black">Products</div>
  <% @products.each do |product| %>

<!--<h1>Products</h1>-->

<div class="productsIndex w3-container">
      <div class="w3-sand w3-padding-32 w3-half" style="height:500px">
        <div class="w3-margin-left w3-xlarge w3-right"> 
           <%= link_to (image_tag product.image_url, :class => "productholsIm"), product %>
        </div>
      </div>
  
    <div class="w3-sand w3-padding-64 w3-half" style="height:500px">
      <h1><%= product.prod_name %></h1>
      <div class="w3-margin-left"></div>
      <p><%= product.description %></p>
      <!--<p><%#= product.stock_quantity %></p>-->
      <!--<p><%#= product.prod_gender %></p>-->
      <p><%= product.prod_size %></p>
      <!--<p><%#= product.colours %></p>-->
      <!--<p><%#= product.offer %></p>-->
      <p>Price <%= number_to_currency(product.prod_price, :unit => "â‚¬") %>
      <br>
      Category: <%= product.category %> 
      <br>
      Brand: <%= product.brand %></p>
      
        <p>
          <% if user_signed_in? %>
          <%= link_to 'Show', product, :class => "button", :role => "button" %>
          <%= link_to 'Edit', edit_product_path(product), :class => "button", :role => "button" %>
          <%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %>
          <% end %>
          <a href="/cart/<%= product.id %>" class="button">Add to Cart</a>
        </p>
    </div>
  </div>
    
  <% end %>
  
</div>
  
