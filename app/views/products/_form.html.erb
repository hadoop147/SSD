<div class='productsForm'>

<div class="w3-card-4">
    <div class="w3-container w3-blue w3-text-white w3-center">
      <h2>New Product</h2>
    </div>

    <br>

  <div class="w3-container w3-text-grey">
    <%= form_for(product) do |f| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :prod_name %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>

      <br>

      <div class="field">
        <%= f.label :stock_quantity %>
        <%= f.number_field :stock_quantity, style: "width:100%" %>
      </div>

      <br>

      <div class="field">
        <%= f.label :gender %>
        <%= f.text_field :prod_gender %>
      </div>

      <div class="field">
        <%= f.label :price %>
        <%= f.text_field :prod_price %>
      </div>

      <div class="field">
        <%= f.label :size %>
        <%= f.text_field :prod_size %>
      </div>

      <div class="field">
        <%= f.label :colours %>
        <%= f.text_field :colours %>
      </div>

      <div class="field">
        <%= f.label :image_url %>
        <%= f.text_field :image_url %>
      </div>

      <div class="field">
        <%= f.label :offer %>
        <%= f.text_field :offer %>
      </div>

      <div class="field">
        <%= f.label :category %>
        <%= f.text_field :category %>
      </div>

      <div class="field">
        <%= f.label :brand %>
        <%= f.text_field :brand %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>

    </div>
</div>
</div>

<br>
