<div class='brands'>
  
  <div class="w3-card-4">
    <div class="w3-container w3-green w3-text-white w3-center">
      <h2>New Brand</h2>
    </div>
    
    <br>
    
    <div class="w3-container w3-text-grey">
  
      <%= form_for(brand) do |f| %>
        <% if brand.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>
      
            <ul>
            <% brand.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="field">
          <%= f.label :brand_name %>
          <%= f.text_field :brand_name %>
        </div>
      
        <div class="field">
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>
      
        <div class="field">
          <%= f.label :yearofestablishement %>
          <%= f.date_select :yearofestablishement %>
        </div>
      
        <div class="actions">
          <%= f.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>

