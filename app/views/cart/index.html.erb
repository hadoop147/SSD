<% provide(:title, "Cart") %>

<div class="w3-container">
  <div class="w3-container w3-orange w3-center w3-text-white w3-wide">
    <p class="w3-xxlarge">shoes@web</p>
  </div>
</div>

<% if @cart.empty? %>
<h1>Your cart is empty</h1>
<% end %>

<div id="itemsContainer">
    <table id="customers">
        <% total=0 %>
        <% @cart.each do |id, quantity| %>
        <% item=Item.find_by_id(id) %>
        <tr>
            <td class= "title"><%= link_to (image_tag item.image_url, :style => "width=100%"), item %></td>
            <td class= "title"><%= link_to item.title, item %></td>
            <td class= "title"><%= number_to_currency(item.price, :unit => "€") %></td>
            <td class= "title"><%= quantity %></td>
            <td class= "title"><%= number_to_currency(quantity*item.price, :unit => "€") %></td>
            
        </tr>
        
        <% total += quantity*item.price %>
        
        <% end %>
        
        <tr>
            
        <td class= "title">Cart Total <%= number_to_currency(total, :unit => "€") %></td>
           
        </tr>
    </table>


    
</div>