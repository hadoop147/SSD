<header class="w3-container">
    
    <div class="w3-bar w3-black w3-large"  style="height:55px;" >
        <%= link_to "", "/", class: "w3-bar-item w3-button w3-text-white w3-hover-red w3-padding-16 fa fa-home w3-mobile w3-xlarge" %> 
        <%= link_to "Mens", "/items", class: "w3-bar-item w3-button w3-text-white w3-hover-blue w3-padding-16 w3-mobile" %>
        <%= link_to "Womens", "/items", class: "w3-bar-item w3-button w3-text-white w3-hover-pink w3-padding-16 w3-mobile" %>
        <%= link_to "Kids", "/items", class: "w3-bar-item w3-button w3-text-white w3-hover-green w3-padding-16 w3-mobile" %>
        <%= link_to "", "/cart", class: "w3-bar-item w3-button w3-text-white w3-hover-orange w3-right w3-padding-16 w3-hover-text-white fa fa-shopping-cart w3-mobile w3-xlarge" %>
        <%= link_to "", "/search", class: "w3-bar-item w3-button w3-right w3-text-white w3-hover-purple w3-padding-16 w3-hover-text-white fa fa-search w3-mobile w3-xlarge" %>
    </div>
    
    <!-- Title section -->
    <div class="w3-wide w3-third w3-bottombar w3-border-black w3-rightbar w3-mobile"  style="height:60px;" >
        <div class="w3-xxlarge">shoes@web</div>
    </div>
     
    <div class="w3-indigo w3-twothird w3-bottombar w3-border-black w3-hide-medium w3-hide-small w3-mobile w3-medium"  style="height:60px;" >
        <div class="w3-mobile">
            <% if user_signed_in? %>
            <a href="#">Hi <%= current_user.email %></a>
            <%= link_to 'Sign out', destroy_user_session_path, :method => :delete, class: "w3-bar-item w3-button w3-text-white w3-hover-teal w3-right w3-padding-16 w3-mobile" %>
            <% else %>
            <%= link_to 'Register', new_user_registration_path ,class: "w3-bar-item w3-button w3-text-white w3-hover-pale-green w3-right w3-padding-16 w3-mobile" %>
            <%= link_to 'Sign in', new_user_session_path, class: "w3-bar-item w3-button w3-text-white w3-hover-amber w3-right w3-padding-16 w3-mobile" %>
            <% end %>
        </div>
    </div>

</header>