<div class="w3-container">
  <div class="w3-container">
    <!--<table class="catalog">-->
    <% @items.limit(2).order(:id).each do |item| %>
        <!--<tr>-->
          <!--<td>-->
          <div class="w3-panel w3-card-4 w3-sand w3-center w3-padding-32 w3-half w3-margin-left" style="width:675px">
          <!--<div class="recents w3-container">-->
            <div class="w3-padding">
              <%= link_to (image_tag item.image_url, :style => "height:200px"), item %>
            </div>
            <div class="w3-padding">
              <%= link_to item.title, item %>
            </div>
            <div class="w3-padding">
              <%= item.description %>
            </div>  
            <div class="w3-padding">
               <%= number_to_currency(item.price, :unit => "â‚¬") %>
            </div>
            <div class="w3-padding">
              <%# if user_signed_in? && current_user.admin? %>
                <%= link_to 'Edit', edit_item_path(item), class: "w3-button w3-indigo w3-text-white w3-hover-amber" %>
                <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "w3-button w3-red w3-text-white w3-hover-purple" %>
              <%# else %>
                <a href="/cart/<%= item.id %>" class= "w3-button w3-yellow w3-text-black w3-hover-pink" >Add to Cart</a>
              <%# end %>  
            </div>
          </div>
          <!--</td>-->
        <!--</tr>-->
    <% end %>
    <!--</table>-->
  </div>
</div>