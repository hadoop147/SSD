<div class="w3-container">
  <p id="notice"><%= notice %></p>

<% if current_user.admin? %> <!-- code for admin -->

<!-- real admin following-->
<% @users.each do |user| %>

<p>User Id: <%= user.id %></p> <!-- number -->
<p>First Name: <%= user.fname %></p> <!-- email -->
<p>Is Admin?: <%= user.admin %></p> <!-- email -->
<a href = "/makeadmin/<%= user.id %>" class="button">Make <%= user.email.split('@')[0].capitalize %> Admin</a> <!-- code for admin - button to allow the option -->
<a href = "/removeadmin/<%= user.id %>" class="button">Remove <%= user.email.split('@')[0].capitalize %> Admin</a> <!-- make admin or remove from admin -->
<% end %>

<% end %>

</div>

<div>

<%= link_to 'New Order', new_order_path, :class => "w3-button w3-orange w3-hover-green w3-round-xxlarge w3-margin-left", :role => "button"  %>

  <h1>Orders</h1>

  <table>
    <thead>
      <tr>
        <th>Order date</th>
        <th>User</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.order_date %></td>
          <td><%= order.user %></td>
          <td><%= order.status %></td>
          <td><%= link_to 'Show', order %></td>
          <td><%= link_to 'Edit', edit_order_path(order) %></td>
          <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>

