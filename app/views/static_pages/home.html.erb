<% provide(:title, "Home") %>

<div class="w3-container">
  <div class="w3-container w3-wide w3-third w3-bottombar w3-border-black">
    <p class="w3-xxlarge">shoes@web</p>
  </div>
  
  <div class="w3-container w3-indigo w3-serif w3-twothird w3-bottombar w3-border-black">
    <p class="w3-right-align w3-xlarge"><i>These shoes are made for walking!!</i></p>
  </div>
</div>

<br><br>

<!-- Image header -->
<div class="w3-container">
  <div class="w3-display-container">
      <%= image_tag("shoes2.jpg", alt: "Shoes", style: "width:100%")  %> 
      <div class="w3-display-topleft w3-text-white" style="padding:24px 48px">
          <h1></h1>
      </div>
  </div>
</div>

<div class="w3-panel">
  <div class="w3-row-padding w3-margin-top">
    <div class="w3-third">
      <div class="w3-card w3-hover-opacity">
        <%= image_tag("menShoe.jpg", alt: "Mens Shoe", style: "width:100%")  %> 
        <div class="w3-container w3-center">
          <h5>Mens Shoes</h5>
        </div>
      </div>
    </div>
  
    <div class="w3-third">
      <div class="w3-card w3-hover-opacity">
        <%= image_tag("womShoe.jpg", alt: "Womens Shoe", style: "width:100%")  %> 
        <div class="w3-container w3-center">
          <h5>Womens Shoes</h5>
        </div>
      </div>
    </div>
  
    <div class="w3-third">
      <div class="w3-card w3-hover-opacity">
        <%= image_tag("kidShoe.jpg", alt: "Kids Shoe", style: "width:100%")  %> 
        <div class="w3-container w3-center">
          <h5>Kids Shoes</h5>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Subscribe section -->
<div class="w3-container">
  <div class="w3-black w3-padding-32 w3-card-4 w3-third">
    <h1 class="w3-margin-left">Subscribe</h1>
    <p>To get special offers and VIP treatment:</p>
    <p><input class="w3-input w3-border" type="text" placeholder="Enter e-mail"></p>
    <button type="button" class="w3-margin-left w3-button w3-red w3-margin-bottom">Subscribe</button>
  </div>
  
  <div class="w3-green w3-padding-32 w3-card-4 w3-twothird">
    <span class="w3-tag w3-xlarge w3-padding w3-red w3-margin-left" style="transform:rotate(-10deg)">
    Special Offer!!
    </span>
    
    <div class="w3-animate-right w3-margin-left w3-xlarge">  "Buy 2 and get 1 pair at 50% off!!"
      <%= image_tag("2wom.jpg", alt: "Womens Shoe", style: "width:40.3%")  %>
    </div>
  </div>
</div>

<br>
