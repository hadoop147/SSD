<div class="shippingSuccess">
   <div class="w3-card-4">
      <div class="w3-container w3-teal w3-text-white w3-center w3-wide">
        <h2>Success!! Shipping created</h2>
      </div>
      
      <p id="notice"><%= notice %></p>
      
      <div class="w3-center w3-wide">
        <p>
          <strong>Date shipped:</strong>
          <%= @shipping.date_shipped %>
        </p>
        
        <p>
          <strong>Customer:</strong>
          <%= @shipping.customer %>
        </p>
        
        <p>
          <strong>Address:</strong>
          <%= @shipping.address %>
        </p>
        
        <p>
          <strong>Order:</strong>
          <%= @shipping.order %>
        </p>
        
        <div class="w3-panel w3-pale-green w3-padding-24">
          <%= link_to 'Edit', edit_shipping_path(@shipping), :class => "w3-button w3-orange w3-hover-green w3-round-large w3-margin-left", :role => "button" %> 
          <%= link_to 'Back', shippings_path, :class => "w3-button w3-orange w3-hover-green w3-round-large w3-margin-left", :role => "button" %>
        </div>
      </div>
    </div>
</div>

